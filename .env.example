# Supabase Configuration
# Get these from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (Server-side only - NEVER expose to client)
# Get this from Supabase Project Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Provider Configuration
# Options: "mock" (default, no API keys needed), "openai", "gemini"
AI_PROVIDER=mock

# OpenAI Configuration (only if AI_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# Gemini Configuration (only if AI_PROVIDER=gemini)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Application URL (for production, set to your Vercel deployment URL)
# Example: https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000
